snippet if
if($0)
else()
endif()
endsnippet

snippet fetch
FetchContent_Declare($1
    GIT_REPOSITORY https://github.com/$2
    SOURCE_DIR "${CMAKE_CURRENT_LIST_DIR}/external/$1"
    GIT_TAG $0main
    )
if(NOT $1_POPULATED)
    FetchContent_Populate($1)
    add_subdirectory(${$1_SOURCE_DIR} ${$1_BINARY_DIR})
endif()
endsnippet
