set hlsearch
set incsearch
set smartcase

" Space in normal mode inserts an empty line above
nnoremap <Space> O<Esc>j

" Redo more intuitive
nnoremap U <C-R>
nnoremap <C-R> U

" Match y behavior to d and c
nnoremap Y y$

" Wrapped lines goes down/up to next row, rather than next line in file.
nnoremap j gj
nnoremap k gk
nnoremap gj j
nnoremap gk k

" qq to record, Q to replay
nnoremap Q @q

" Switch panes
noremap <A-L> <C-W>w

" Swap semicolon and colon
nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;

" Map Alt-J and Alt-K to move view up and down
nnoremap <A-J> <C-Y>
nnoremap <A-K> <C-E>

" Map Alt-L and Alt-H to resize vertical splits
nnoremap <A-L> <C-W>5>
nnoremap <A-H> <C-W>5<

" Break strings at textwidth
nnoremap <Leader>b 80\|Bi"<CR>"<Esc>
